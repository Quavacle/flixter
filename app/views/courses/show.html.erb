<br />

<div class="booyah-box col-10 offset-1">
 <h1><%= @course.title %></h1>
 <div class="row">
  <div class="col-sm-4 col-6">

    <% if @course.image.url %>
    <%= image_tag @course.image.url, class: 'img-fluid coursephoto' %>
    <% end %>
  </div>

  <div class="col-sm-8 col-5">
    <%= @course.description %>
  </div>
  <div class="booyah-box">
    <div class="row">
      <div class="col-sm-4 col-12 text-center">
        Cost:
        <span class="badge badge-success"><%= number_to_currency @course.cost %></span>
        Instructor: <%= @course.user %>
        <div class="col-sm-4 col-12">
          <%if current_user && current_user == @course.user %>
          <br />
          <%= link_to 'Administer', instructor_course_path(@course), class: "btn btn-danger btn-large" %>
          <br />
          <br />      
          <% elsif current_user && current_user.enrolled_in?(@course) %>
          <h3 class="badge badge-info">You Are Enrolled!</h3>
          <% else %>
          <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

</div>


<div class="booyah-box col-10 offset-1">
  <% @course.sections.each do |section| %>
  <div class="section">
    <h3 class="sectionhead text-center"><%= section.title %></h3>
    <div class="row">
      <% section.lessons.each do |lesson| %>
      <div class="col-12 col-sm-6">
        <div class="lesson text-center">
          <%= link_to lesson_path(lesson) do %>
          <b><%= lesson.title %></b>
          -
          <%= lesson.subtitle %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <br class="clr" />
  </div>
  <% end %>

</div>
</div>