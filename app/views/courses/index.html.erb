<br />
<div class="booyah-box col-10 offset-1">
  <h1> Courses Available </h1>

<% @courses.each do |course| %>
  <h2 class="text-center">
    <%= link_to course.title, course_path(course) %>   
    </h2>
    <% if course.image.url %>
    <%= image_tag course.image.url %>
    <span class="badge badge-success"><%= number_to_currency course.cost %></span>
    <% end %>
  <br >
  <div class="row">
    <div class="col-sm-8 col-12">
      <%= course.description %>
    </div>
    <div class="col-sm-col-12 text-center">
      <%= link_to 'Learn More', course_path(course), class: 'btn btn-primary btn-large' %>
    </div>
  </div>
  <br class="clr">
  <% end %>
</div>