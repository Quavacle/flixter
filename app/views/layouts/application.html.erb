   <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
      <li class="nav-item dropdown navbar-right">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown link
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" link_to="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="nav-item dropdown navbar-right">

        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-music"></i>
          <%if user_signed_in? %>
            <%= current_user.email %>
            <% else %>
            Login or sign up!
            <% end %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% if user_signed_in? %>
          <strong><%= current_user.email %></strong>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'dropdown-item fas fa-user-cog' %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'dropdown-item fas fa-sign-out-alt'  %>
          <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'dropdown-item fas fa-user-plus'  %>
          <%= link_to "Login", new_user_session_path, :class => 'dropdown-item fas fa-sign-in-alt'  %>
          <% end %>
        <!-- <a class="dropdown-item" href="#"><i class="fas fa-user-plus"></i></span>  New User</a>
          <a class="dropdown-item" href="#"><i class="fas fa-sign-in-alt"></i></span>  Login</a> -->
        </div>
      </li>


    </ul>
  </div>
</nav>
