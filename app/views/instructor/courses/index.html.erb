<br />
<div class="booyah-box col-10 offset-1">
<h1>Courses I'm teaching</h1>

  <% @course.each do |course| %>
  <div class="row">
  <div class="col-sm-2 col-3">
    <%= link_to course.title, course_path(course) %> <br />
    Enrolled: <%= course.enrollments.count %> <br />
    <span class="badge badge-success"><%= number_to_currency course.cost %></span>
  </div>
  <%= image_tag course.image.url, class: "coursephoto" %>
  <div class="col-sm-4 col-5">
    <%= link_to 'Administer', instructor_course_path(course), class: "btn btn-danger btn-large" %> <br />
    <%= link_to 'Edit course', '#', class: "btn btn-primary btn-large" %> <br />
    <%= link_to 'Contact students', '#', class: "btn btn-success btn-large" %>
    </div>
  <br />
</div>
  <% end %>
</div>
<br />
  <hr class="col-8 offset-2">
    <br class="clr" />
<div class="booyah-box col-10 offset-1">
<h1>What I'm Learning</h1>
<% current_user.enrolled_courses.each do |course| %>
  <h3 class="text-center">

    <%= link_to course.title, course_path(course) %>
    </h3>
        <br />
     <%= image_tag course.image.url, class: "coursephoto" %>
         <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  <% end %>
</div>